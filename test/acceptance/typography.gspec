@objects
	paragraph		.paragraph
	dyslexic		.d2l-dyslexic
	lang-arabic		#arabic
	lang-chinese	#chinese
	lang-korean		#korean
	lang-japanese	#japanese
	heading-1-*		.d2l-heading-1
	heading-2-*		.d2l-heading-2
	heading-3-*		.d2l-heading-3
	heading-4-*		.d2l-heading-4
	standard		.d2l-body-standard
	compact			.d2l-body-compact
	small			.d2l-body-small

@groups
	heading-1s	heading-1-1, heading-1-2, heading-1-3, heading-1-4
	heading-2s	heading-2-1, heading-2-2, heading-2-3, heading-2-4
	heading-3s	heading-3-1, heading-3-2, heading-3-3, heading-3-4
	heading-4s	heading-4-1, heading-4-2, heading-4-3, heading-4-4

= Typography classes =
	@on desktop
		paragraph:
			css color matches "#565a5c|rgba\\(86, 90, 92, 1\\)|rgb\\(86, 90, 92\\)"
			css font-family matches "(?i)['|\"]*lato['|\"]*,\\s*['|\"]lucida sans unicode['|\"],\\s*['|\"]lucida grande['|\"],\\s*sans-serif"
			css font-size is "19px"
			css font-weight matches "normal|400"
			css letter-spacing matches "0\.2(0+.*)?px"
			css line-height is "28px"
			css margin-top is "20px"
			css margin-right is "0px"
			css margin-bottom is "20px"
			css margin-left is "0px"
		dyslexic:
			css font-family matches "(?i)['|\"]open dyslexic['|\"],\\s*sans-serif"
		lang-arabic:
			css font-family matches "(?i)['|\"]arabic transparent['|\"],\\s*['|\"]arabic typesetting['|\"],\\s*['|\"]geeza pro['|\"],\\s*sans-serif"
		lang-chinese:
			css font-family matches "(?i)['|\"]microsoft yahei['|\"],\\s*['|\"]hiragino sans gb['|\"],\\s*sans-serif"
		lang-korean:
			css font-family matches "(?i)['|\"]apple sd gothic neo['|\"],\\s*['|\"]*dotum['|\"]*,\\s*sans-serif"
		lang-japanese:
			css font-family matches "(?i)['|\"]hiragino kaku gothic pro['|\"],\\s*['|\"]*meiyro['|\"]*,\\s*sans-serif"
		&heading-1s:
			css font-size is "40px"
			css font-weight matches "normal|400"
			css line-height is "48px"
			css margin-top is "30px"
			css margin-right is "0px"
			css margin-bottom is "30px"
			css margin-left is "0px"
		&heading-2s:
			css font-size is "30px"
			css font-weight matches "normal|400"
			css line-height is "36px"
			css margin-top is "30px"
			css margin-right is "0px"
			css margin-bottom is "30px"
			css margin-left is "0px"
		&heading-3s:
			css font-size is "20px"
			css font-weight matches "bold|700"
			css line-height is "30px"
			css margin-top is "30px"
			css margin-right is "0px"
			css margin-bottom is "30px"
			css margin-left is "0px"
		&heading-4s:
			css font-size is "16px"
			css font-weight matches "bold|700"
			css line-height is "24px"
			css margin-top is "30px"
			css margin-right is "0px"
			css margin-bottom is "30px"
			css margin-left is "0px"
		standard:
			css font-size is "19px"
			css line-height is "28px"
		compact:
			css font-size is "16px"
			css line-height is "24px"
		small:
			css font-size is "14px"
			css line-height is "21px"
	@on mobile
		&heading-1s:
			css font-size is "30px"
			css line-height is "36px"
		&heading-2s:
			css font-size is "20px"
			css line-height is "30px"
		&heading-3s:
			css font-size is "16px"
			css line-height is "24px"
		&heading-4s:
			css font-size is "16px"
			css line-height is "24px"
		standard:
			css font-size is "16px"
			css line-height is "24px"
		compact:
			css font-size is "16px"
			css line-height is "24px"
		small:
			css font-size is "12px"
			css line-height is "18px"
